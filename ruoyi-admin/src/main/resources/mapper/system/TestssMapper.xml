<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TestssMapper">
    
    <resultMap type="Testss" id="TestssResult">
        <result property="id"    column="id"    />
        <result property="a"    column="a"    />
        <result property="b"    column="b"    />
        <result property="c"    column="c"    />
    </resultMap>

    <sql id="selectTestssVo">
        select id, a, b, c from testss
    </sql>

    <select id="selectTestssList" parameterType="Testss" resultMap="TestssResult">
        <include refid="selectTestssVo"/>
        <where>
            <if test="c != null  and c != ''">`c`=#{c}</if>

        </where>

    </select>
    
    <select id="selectTestssById" parameterType="Long" resultMap="TestssResult">
        <include refid="selectTestssVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTestss" parameterType="Testss" useGeneratedKeys="true" keyProperty="id">
        insert into testss
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="a != null ">a,</if>
            <if test="b != null ">b,</if>
            <if test="c != null  and c != ''">c,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="a != null ">#{a},</if>
            <if test="b != null ">#{b},</if>
            <if test="c != null  and c != ''">#{c},</if>
         </trim>
    </insert>

    <update id="updateTestss" parameterType="Testss">
        update testss
        <trim prefix="SET" suffixOverrides=",">
            <if test="a != null ">a = #{a},</if>
            <if test="b != null ">b = #{b},</if>
            <if test="c != null  and c != ''">c = #{c},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTestssById" parameterType="Long">
        delete from testss where id = #{id}
    </delete>

    <delete id="deleteTestssByIds" parameterType="String">
        delete from testss where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>